<Page x:Class="CryptographicCommunicationProgram.Pages.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptographicCommunicationProgram.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogInPage">

    <Grid>
        <Label Content="User Log In" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" BorderThickness="0,0,1,0"/>
        <TextBox x:Name="userNameBox" HorizontalAlignment="Center" Margin="0,71,0,0" Text="UserName" TextWrapping="Wrap" VerticalAlignment="Top" Width="208"/>
        <PasswordBox x:Name="userPasswordBox" HorizontalAlignment="Center" Margin="0,94,0,0" VerticalAlignment="Top" Width="208"/>
        <Button x:Name="logInButton" Content="Log In" HorizontalAlignment="Center" Margin="0,117,0,0" VerticalAlignment="Top"/>
        <Button x:Name="createAccountButton" Content="Create Account" HorizontalAlignment="Center" Margin="0,142,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
